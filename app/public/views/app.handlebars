    <div class="form-row">
        <div class="col-9">
            <h3 id="chosenBeerName"></h3>
        </div>
        <div class="col-3 text-right">
            <button id="updateBeer" class="btn btn-danger" type="button"><i class="fas fa-pencil-alt"></i> Update</button>
        </div>
    </div>
    <div>
        Style:
        <span id="chosenBeerStyle"></span>
        ABV:
        <span id="chosenBeerABV"></span>
        IBU:
        <span id="chosenBeerIBU"></span>
