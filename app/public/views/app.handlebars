<!-- Beer Search Section -->
<form id="beerSearchSection" autocomplete="off">
    <div class="form-row">
        <div class="col">
            <h3 id="beerSearchToggle">
                <label class="col" for="beer" id="beerSearch">Beer Search</label>
            </h3>
        </div>
        <div class="col text-right">
            <button id="addBeerToggle" class="btn btn-danger" type="button">
                <i class="far fa-plus-square" title="Add New Beer"></i> Add Beer</button>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <input type="text" name="beer" id="beerAutocomplete" class="form-control form-control-lg" autocomplete="new-password">
        </div>
    </div>
</form>
<!-- End Beer Search Section -->

<!-- Add/Update Form Section -->
<div id="addUpdateBeerSection" class="outlineSection">
    <form id="newBeerForm" autocomplete="off">
        <div class="form-group">
            <input type="hidden" id="beerID">
            <label for="inputBeerName">Beer</label>
            <input type="text" class="form-control form-control-lg" id="beerName" placeholder="Bud Light" required="required">
        </div>

        <div class="form-group form-row">
            <div class="col-8">
                <label for="beerStyle">Style</label>
                <input class="form-control" id="styleAutocomplete" type="text">
            </div>
            <div class="col-2">
                <label for="beerABV">ABV</label>
                <input class="form-control" id="abv" type="number" step="0.01" min="0" max="100">
            </div>
            <div class="col-2">
                <label for="beerIBU">IBU</label>
                <input class="form-control" id="ibu" type="number" step="0.01" min="0" max="1000">
            </div>
        </div>

        <div class="form-group">
            <label for="beerDescription">Description</label>
            <textarea class="form-control form-control-lg" id="description"></textarea>
        </div>

        <div class="form-group">
            <label for="Brewery">Brewery</label>

            <input class="form-control" id="breweryAutocomplete" type="text">
        </div>

        <div class="form-group">
            <label for="Address">Address
            </label>
            <input class="form-control" id="address" type="text">
        </div>

        <div class="form-group form-row">
            <div class="col-9">
                <label for="City">City
                </label>
                <input class="form-control" id="city" type="text">
            </div>
            <div class="col-3">
                <label for="State">State</label>
                <input class="form-control" id="stateAutocomplete" type="text">
            </div>
        </div>

        <div class="form-group form-row">
            <div class="col-8">
                <label for="Country">Country</label>
                <input class="form-control" id="countryAutocomplete" type="text">
            </div>
            <div class="col-4">
                <label for="Zip">Zip Code</label>
                <input class="form-control" id="zipCode" type="text">
            </div>
        </div>

        <div class="form-group">
            <label for="Phone">Phone</label>
            <input class="form-control" id="phone" type="tel">
        </div>

        <div class="form-group">
            <label for="Website">Website</label>
            <input class="form-control" id="website" type="url">
        </div>

        <div class="form-group text-center">
            <button id="beerSubmit" class="btn btn-warning btn-lg" type="submit">Submit this beer! </button>
            <button id="beerClear" class="btn btn-danger btn-lg" type="button"><i class="fas fa-ban"></i> Cancel</button>
        </div>
    </form>
</div>

<!-- End Add/Update Form Section -->


<!-- Beer Consumed Form -->
