<div class="row">
    <div class="col-12 col-md-6">
        <label for="beer" id="beerSearch">
            Beer Search
            <input type="text" name="beer" id="beerAutocomplete">
        </label>
        <div class="outlineSection">
            <h3 id="toggleAddBeer">
                Not finding your beer? Add it!</h3>
                <form>
  <div class="form-group">
    <label for="inputBeerName">Beer Name</label>
    <input type="text" class="form-control" id="beerName" placeholder="Bud Light">
  </div>

 
  <div class="form-group row ml-3">
    <div class="col-xs-3">
        <label for="beerStyle">Style</label>
        <input class="form-control" id="styleAutocomplete" type="text">
    </div>
    <div class="col-xs-3">
        <label for="beerABV">ABV</label>
        <input class="form-control" id="abv" type="text">
    </div>
    <div class="col-xs-3">
        <label for="beerIBU">IBU</label>
        <input class="form-control" id="ibu" type="text">
    </div>
  </div>
    </div>
  <div class="form-group">
    <label for="beerDescription">Description</label>
    <textarea class="form-control" id="description" rows="3"></textarea>
  </div>
    Brewery Info:
  <div class="form-group row ml-3">
    <div class="col-xs-3">
        <label for="Brewery">Brewery name</label>
        <input class="form-control" id="brewery" type="text">
    </div>
    <div class="col-xs-3">
        <label for="Address">Address</label>
        <input class="form-control" id="address" type="text">
    </div>
        <div class="col-xs-3">
        <label for="City">City</label>
        <input class="form-control" id="city" type="text">
    </div>
</div>
  <div class="form-group row ml-3">
    <div class="col-xs-3">
        <label for="State">State</label>
        <input class="form-control" id="stateAutocomplete" type="text">
    </div>
    <div class="col-xs-3">
        <label for="Country">Country</label>
        <input class="form-control" id="country" type="text">
    </div>
        <div class="col-xs-3">
        <label for="Zip">Zip Code</label>
        <input class="form-control" id="Zip Code" type="text">
    </div>
</div>

  <div class="form-group row ml-3">
    <div class="col-xs-3">
        <label for="Phone">Phone</label>
        <input class="form-control" id="phone" type="text">
    </div>
    <div class="col-xs-3">
        <label for="Website">Website</label>
        <input class="form-control" id="website" type="text">
    </div>
</div>


  <div class="form-group">



</form>
        </div>
    </div>
    <div class="col-12 col-md-6">
        <form id="beerDrankForm" class="text-center">
            <input name="beerID" value="">
            <input name="drinkerID" value="{{drinker.id}}">
            <h2 id="beerSelectionName" class="mb-3"></h2>
            <p id="beerSelectionDescription" class="mb-3"></p>
            <div class="mb-4">
              <select id="beerDropdown">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
              </select>
            </div>
            <button id="signInButton" class="btn btn-warning btn-lg" type="submit">I drank this beer! </button>
            <a id="cancelAddBeerDrank" href="">Cancel</a>
        </form>

        <div id="beerHistory" class="outlineSection">
            <h3 class="text-center">Beer History</h3>
            <table id="beerHistoryTable">
            </table>
            <div id="beerStatistics">
                <p>
                    Total Beers Drank:
                    <span id="numBeersDrank"></span>
                </p>
                <p>
                    Total Different Beers:
                    <span id="numDifferentBeers"></span>
                </p>
            </div>
        </div>
    </div>
</div>